<div class="row">
	<div class="col-md-3"></div>
	<div class="col-md-4">
		<ol class="list-group">
			{{#each burgers}}
				{{#unless this.devoured}}
					<li class="list-group-item">
						{{ this.id }}. {{ this.burger_name }}
						
						<div class="devour-btn-container">
							<div class="dropdown">
							  <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							    Chomp It!
							    <span class="caret"></span>
							  </button>
							  <ul class="dropdown-menu" aria-labelledby="nameEntry">
							    <li>
										<div class="input-group">
											<form action="/{{this.id}}?_method=PUT" method="POST">
	      								<input name="userName" type="text" class="form-control" placeholder="Enter your name..." required>
	      								<span class="input-group-btn">
	        								<button class="btn btn-danger" type="submit">OK!</button>
	      								</span>
	      							</form>
    								</div><!-- /input-group -->
							    </li>
							  </ul>
							</div>
						</div>

					</li>
					
				{{/unless}}
			{{/each}}
		</ol>
	</div> <!-- .col-md-4 -->
	<div class="col-md-1"></div>
	<div class="col-md-4">
		<ol class="list-group">
			{{#each burgers}}
				{{#if this.devoured}}
					<li class="list-group-item">
						{{ this.id }}. {{ this.burger_name }}
					</li>
				{{/if}}
			{{/each}}
		</ol>
	</div> <!-- .col-md-4 -->
</div> <!-- .row -->